#topBar
  - if user_signed_in?
    = "#{current_user.email} |"
    = link_to t('profile'), edit_user_registration_path,class: 'profileBtn'
    = '|'
    =  link_to t('logout'), destroy_user_session_path, method: 'delete',class: 'deleteBtn'
  - else
    = link_to t('login'), new_user_session_path,class: 'loginBtn'
    = '|'
    = link_to t('sign_up'), new_user_registration_path,class: 'signupBtn'
-flash.each do |key, value|
  = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?