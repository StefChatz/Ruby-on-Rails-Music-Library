= form_for @info do |f|
  - if @info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@info.errors.count, "error")} prohibited this info from being saved:"
      %ul
        - @info.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :song
    %p= @song.title
    =f.hidden_field :song_id, value: @song.id
  .field
    = f.label :Album
    = f.text_field :title
  .actions
    = f.submit 'Save'
